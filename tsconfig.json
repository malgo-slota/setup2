{
    "compilerOptions": {
        "target": "es5",                          
        "module": "commonjs",                    
        "lib": ["es6", "DOM", "DOM.Iterable"],                     
        "allowJs": true,
        "outDir": "build",                          
        // "rootDir": "src",
        "strict": true,         
        "noImplicitAny": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "jsx": "react-jsx",
        "plugins": [
            { 
                "name": "typescript-plugin-css-modules" 
            }
        ]
    }
}
